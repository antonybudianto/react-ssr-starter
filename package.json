{
  "name": "react-ssr-template",
  "version": "1.0.0",
  "description": "react ssr template",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint bin config src",
    "test": "jest",
    "dev:client": "better-npm-run dev:client",
    "dev:server": "better-npm-run dev:server",
    "build:client": "better-npm-run build:client",
    "build:server": "better-npm-run build:server",
    "start": "better-npm-run start",
    "compile:dev": "better-npm-run compile:dev",
    "compile:staging": "better-npm-run compile:staging",
    "compile:prod": "better-npm-run compile:prod",
    "deploy:dev": "better-npm-run deploy:dev",
    "deploy:staging": "better-npm-run deploy:staging",
    "deploy:prod": "better-npm-run deploy:prod",
    "start:dev": "node dist/bundle.js",
    "prettier": "prettier --write \"{src,config}/**/*.js\""
  },
  "betterScripts": {
    "start": {
      "command": "npm run clean && npm-run-all --parallel dev:*",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "compile:dev": {
      "command": "node bin/compile",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "compile:staging": {
      "command": "node bin/compile",
      "env": {
        "NODE_ENV": "staging",
        "DEBUG": "app:*"
      }
    },
    "compile:prod": {
      "command": "node bin/compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "deploy:dev": {
      "command": "npm run clean && npm run compile:dev && npm run start:dev",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy:staging-old": {
      "command": "npm run clean && npm run compile:staging",
      "env": {
        "NODE_ENV": "staging",
        "DEBUG": "app:*"
      }
    },
    "deploy:prod-old": {
      "command": "npm run clean && npm run compile:prod",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "deploy:staging": {
      "command": "npm run clean && npm-run-all build:*",
      "env": {
        "NODE_ENV": "staging"
      }
    },
    "deploy:prod": {
      "command": "npm run clean && npm-run-all build:*",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:server": {
      "command": "webpack --config ./config/webpack.server.config.babel.js --progress"
    },
    "build:client": {
      "command": "webpack --config ./config/webpack.client.config.babel.js --progress"
    },
    "dev:server": {
      "command": "webpack --config ./config/webpack.server.config.babel.js --watch",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev:client": {
      "command": "webpack --config ./config/webpack.client.config.babel.js --watch",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "author": "Antony",
  "license": "MIT",
  "jest": {
    "globals": {
      "__DEV__": false,
      "__TEST__": true,
      "__PROD__": false,
      "__STAG__": false
    }
  },
  "dependencies": {
    "axios": "0.18.0",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.4",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-require-ignore": "0.1.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "^6.26.0",
    "better-npm-run": "^0.1.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.11",
    "debug": "^3.1.0",
    "dotenv": "5.0.1",
    "express": "4.16.3",
    "express-http-proxy": "1.2.0",
    "file-loader": "^1.1.11",
    "fs-extra": "^5.0.0",
    "ip": "^1.1.5",
    "loadable-components": "1.4.0",
    "lodash": "4.17.10",
    "lodash-es": "4.17.10",
    "mini-css-extract-plugin": "0.4.0",
    "morgan": "1.9.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "4.1.2",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "prop-types": "^15.6.1",
    "query-string": "^6.1.0",
    "raf": "3.4.0",
    "react": "16.3.2",
    "react-body-classname": "^1.2.0",
    "react-dom": "16.3.2",
    "react-helmet": "5.2.0",
    "react-redux": "5.0.7",
    "react-router-config": "1.0.0-beta.4",
    "react-router-dom": "4.2.2",
    "recompose": "0.27.0",
    "redux": "4.0.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "serialize-javascript": "1.5.0",
    "style-loader": "^0.21.0",
    "ua-parser-js": "0.7.17",
    "url-loader": "^1.0.1",
    "webpack": "4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-merge": "4.1.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "http-proxy-middleware": "^0.18.0",
    "jest": "^22.4.3",
    "nodemon": "1.17.3",
    "nodemon-webpack-plugin": "^4.0.2",    
    "prettier": "1.12.1",
    "reload": "^2.2.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack-node-externals": "^1.7.2"
  }
}
